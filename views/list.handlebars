<!DOCTYPE html>
<html>
<head>
	{{> metadata}}	
	{{> library_includes}}
</head>
<body>
	<div class="container">
		{{>navbar }}
		
		<div class="content">
		{{#each list}}
		<!-- items in a category -->
		<a class="clickable" href="/item/{{category.id}}/{{id}}">
		<div class="panel panel-primary itPanel" id="{{id}} cname">
		<span class="">{{name}}</span>
		{{#if daysBeforeExp}}
		<span class="exp pull-right" {{#if color}}style="color:red;"{{/if}}>{{daysBeforeExp}}</span>
		{{/if}}

		{{!-- <span>{{daysBetween }}</span> --}}
		</div>
		</a>
		{{/each}}

		{{#unless list}}
		<div class="panelB" style="font-size:1.5em;padding:5%;"> Nothing in this category yet, <a href="/">return</a> to home page and add some items.</div>
		{{/unless}}
		</div>
	</div>
</body>
</html>